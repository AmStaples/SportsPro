@model Product
@{
    ViewData["Title"] = ViewBag.Mode + " Product";
    @section scripts {
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
}

<h1>@ViewData["Title"]</h1>

<form asp-action="@ViewBag.Mode" method="post">
    <input asp-for="ProductID" type="hidden" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label">Code</label>
        <input asp-for="ProductCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label">Release Date</label>
        <input asp-for="ReleaseDate" step="1" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>
