@model List<Product>
@{
    ViewData["Title"] = "Product Manager";
}

<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Price</th>
                <th>Release Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductCode</td>
                    <td>@product.Name</td>
                    <td>@product.YearlyPrice.ToString("c")</td>
                    <td>@product.ReleaseDate.ToString("d")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Add" class="btn btn-primary">Add Product</a>
