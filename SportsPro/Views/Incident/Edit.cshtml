@model SportsPro.Models.IncidentEditViewModel

@{
    ViewData["Title"] = "Incident Manager";
    @section scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
}

<h1>@ViewData["Title"]</h1>

<form asp-action="@Model.Mode" method="post">
    <input asp-for="@Model.Incident.IncidentID" type="hidden" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.CustomerID" class="form-label">Customer</label>
        <select asp-for="@Model.Incident.CustomerID" asp-items="@(new SelectList(Model.Customers, "CustomerID", "FullName"))" class="form-control">
            <option value="">-- Select a Customer --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.ProductID" class="form-label">Product</label>
        <select asp-for="@Model.Incident.ProductID" asp-items="@(new SelectList(Model.Products, "ProductID", "Name"))" class="form-control">
            <option value="">-- Select a Product --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.Title" class="form-label">Title</label>
        <input asp-for="@Model.Incident.Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.Description" class="form-label">Description</label>
        <input asp-for="@Model.Incident.Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.TechnicianID" class="form-label">Technician</label>
        <select asp-for="@Model.Incident.TechnicianID" asp-items="@(new SelectList(Model.Technicians, "TechnicianID", "Name"))" class="form-control">
            <option value="">-- Select a Technician --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.DateOpened" class="form-label">DateOpened</label>
        <input asp-for="@Model.Incident.DateOpened" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Incident.DateClosed" class="form-label">DateClosed</label>
        <input asp-for="@Model.Incident.DateClosed" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>

