@model Incident

<h2>Edit Incident</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IncidentID" />
    <input type="hidden" asp-for="TechnicianID" />
    <input type="hidden" asp-for="CustomerID" />


    <div class="form-group">
        <label>Title</label>
        <input class="form-control" asp-for="Title" readonly />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
        <label>Date Opened</label>
        <input class="form-control" asp-for="DateOpened" readonly />
    </div>

    <div class="form-group">
        <label>Date Closed</label>
        <input type="date" class="form-control" asp-for="DateClosed" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="List" asp-route-technicianId="@Model.TechnicianID" class="btn btn-secondary mt-2">Cancel</a>
</form>
