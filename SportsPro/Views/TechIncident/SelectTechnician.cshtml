@model List<Technician>

<h2>Select a Technician</h2>

<form asp-action="SetTechnician" method="post">
    <div class="form-group">
        <label for="technicianId">Technician</label>
        <select name="technicianId" class="form-control" required>
            <option value="">-- Select a Technician --</option>
            @foreach (var tech in Model)
            {
                <option value="@tech.TechnicianID">@tech.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Select</button>
</form>
