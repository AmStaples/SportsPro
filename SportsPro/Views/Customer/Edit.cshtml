@model Customer
@{
    ViewData["Title"] = "Edit Customer";
    @section scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
}
<h1>@ViewBag.Mode Customer</h1>

<form asp-action="@ViewBag.Mode" method="post">
    <input asp-for="CustomerID" type="hidden"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-form-label col-md-2">First name</label>
        <div class="col-md-4">
        <input asp-for="FirstName" class="form-control"  />
        </div>
        <span asp-validation-for="FirstName" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-form-label col-md-2">Last name</label>
        <div class="col-md-4">
        <input asp-for="LastName" class="form-control"/>
        </div>
        <span asp-validation-for="LastName" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-form-label col-md-2">Address</label>
        <div class="col-md-4">
        <input asp-for="Address" class="form-control" />
        </div>
        <span asp-validation-for="Address" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-form-label col-md-2">City</label>
        <div class="col-md-4">
        <input asp-for="City" class="form-control" />
        </div>
        <span asp-validation-for="City" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="State" class="col-form-label col-md-2">State</label>
        <div class="col-md-4">
        <input asp-for="State" class="form-control" />
        </div>
        <span asp-validation-for="State" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="PostalCode" class="col-form-label col-md-2">Postal Code</label>
        <div class="col-md-4">
        <input asp-for="PostalCode" class="form-control" />
        </div>
        <span asp-validation-for="PostalCode" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="CountryID" class="col-form-label col-md-2">Country</label>
        <div class="col-md-4">
        <select-list entity-type="country" selected-id="@Model.CountryID" asp-for="CountryID"></select-list>
        </div>
        <span asp-validation-for="CountryID" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-form-label col-md-2">Phone</label>
        <div class="col-md-4">
        <input asp-for="Phone" class="form-control" />
        </div>
        <span asp-validation-for="Phone" class="text-danger col-md-6"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-md-2">Email</label>
        <div class="col-md-4">
        <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email" class="text-danger col-md-6"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>