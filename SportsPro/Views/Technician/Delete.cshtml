@model Technician
@{
    ViewData["Title"] = "Delete Technician";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Delete" method="post">
    <vc:confirm-deletion id="@Model.TechnicianID" name="@Model.Name"></vc:confirm-deletion>
    <p class="mb-3">Are you sure you want to delete the technician "@Model.Name"?</p>
    <div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>
